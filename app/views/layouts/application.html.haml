    = csp_meta_tag
    = javascript_pack_tag    'heroku_client_and_server'
    = javascript_pack_tag    'heroku_client_only'

    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'


  -#
  -# Bootstrap grid for all containers, appears ONE TIME ONLY
  -#
  
  .container-fluid


    - if controller_name == 'hyperstack'

      = mount_component 'Header'

    - else

      = render '/shared/header'


    = yield


    - if controller_name == 'hyperstack'

      = mount_component 'Footer'

    - else

      = render '/shared/footer'



